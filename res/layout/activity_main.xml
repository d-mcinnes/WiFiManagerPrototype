<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingBottom="@dimen/title_bottom_margin" >
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:text="@string/app_title"
	        android:textColor="@color/title_text"
	        android:textSize="30sp" />
    </RelativeLayout>
    
	<LinearLayout
	    	android:id="@+id/home_map_container"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:onClick="mapClickEvent" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/btn_map"
	        android:drawablePadding="10dip"
	        android:gravity="center"
	        android:padding="@dimen/home_icon_padding"
	        android:text="@string/home_map"
	        android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_map_description"
            android:textColor="@color/text" />
    </LinearLayout>
    
	<View android:background="@color/line_ruler_colour" android:layout_width="fill_parent" android:layout_height="1dip" />
    
    <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:onClick="compassClickEvent" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/btn_compass"
	        android:drawablePadding="10dip"
	        android:gravity="center"
	        android:padding="@dimen/home_icon_padding"
	        android:text="@string/home_compass"
	        android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_compass_description"
            android:textColor="@color/text" />
    </LinearLayout>
    
    <View android:background="@color/line_ruler_colour" android:layout_width="fill_parent" android:layout_height="1dip" />
    
    <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center_vertical"
        	android:onClick="cameraClickEvent" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/btn_camera"
	        android:drawablePadding="10dip"
	        android:gravity="center"
	        android:padding="@dimen/home_icon_padding"
	        android:text="@string/home_camera"
	        android:textColor="@color/text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_camera_description"
            android:textColor="@color/text" />
    </LinearLayout>

</LinearLayout>
</ScrollView>